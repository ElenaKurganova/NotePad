<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/label_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/label_note_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label_note_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/label_note_title"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/label_note_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_note_description"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_below="@+id/label_note_title"
        android:layout_marginStart="16dp"
        android:text="@string/label_note_description"
        app:layout_constraintBaseline_toBaselineOf="@+id/value_note_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/value_note_description"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignTop="@+id/label_note_description"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/label_note_description"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/value_note_title"
        app:layout_constraintTop_toBottomOf="@+id/value_note_title" />

    <TextView
        android:id="@+id/value_note_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/value_note_title"
        app:layout_constraintTop_toBottomOf="@+id/value_note_title" />

</android.support.constraint.ConstraintLayout>